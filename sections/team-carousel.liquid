      },
      {
        "type": "collection",
        "id": "teamcollection",
        "label": "Team Collection"
     },
      {
        "type": "page",
        "id": "teampagelink",
        "label": "Team Page"
     }
    ],
    "presets": [{
        "name": "Team Carousel",
        "category": "Text"
    }]
  }
{% endschema %}